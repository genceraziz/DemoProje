@model InGameDemo.Core.Models.UserRoleFormForDto
@{
    ViewData["Title"] = "Kullanıcı Rol Yönetimi";
}

<div class="row">
    <div class="col-md-12">
        <h2>Kullanıcı Rol Yönetimi</h2>
        <hr />
    </div>
    <div class="col-md-6">
        <form asp-action="UserRoleManagement" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="UserId"></label>
                <select asp-for="UserId" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.Id">@user.UserName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Role"></label>
                <select asp-for="Role" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                </select>
            </div>

            <div class="pull-right">
                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-save"></span> Kaydet</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>
</div>